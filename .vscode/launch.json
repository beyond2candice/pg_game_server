    "version": "0.2.0",
    "configurations": [
        {
            "name": "go launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        }, 
        {
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\dist\\indexprod.js",
            "envFile": "${workspaceFolder}\\src\\.env"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Launch bg_game",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\dist\\bg_game\\index.js",
            "envFile": "${workspaceFolder}\\src\\dist\\bg_game\\.env"
        }
    ]
}